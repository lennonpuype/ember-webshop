<GeneralContainer>
  <div class="product item-details-page">
    <Product::Image @src={{this.productImage}} />
    <Product::Details @color={{this.color}} @productInfo={{this.product}} @onChangeColor={{this.onChangeColor}} />
  </div>

  <h5 class="mt-5">Features</h5>
  <ul>
    {{#each @model.features as |feature|}}
    <li>{{feature}}</li>
    {{/each}}
  </ul>
</GeneralContainer>